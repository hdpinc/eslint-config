{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 9am on sunday"],
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on the first day of the month"]
  },
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "groupName": "Dev dependencies",
      "depTypeList": ["devDependencies"]
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "groupName": "ESLint",
      "packagePatterns": ["^eslint/", "^@typescript-eslint/"]
    }
  ]
}
