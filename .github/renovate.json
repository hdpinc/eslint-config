{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": "before 3am on the first day of the month",
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "automerge": true,
  "major":  {
    "automerge": false
  },
  "packageRules": [
    {
      "groupName": "Dev dependencies",
      "depTypeList": ["devDependencies"]
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "groupName": "ESLint",
      "packagePatterns": ["^eslint/", "^@typescript-eslint/"]
    }
  ]
}
