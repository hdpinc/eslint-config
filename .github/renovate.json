{
  "extends": ["config:base"],
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "automerge": true,
  "major":  {
    "automerge": false
  },
  "packageRules": [
    {
      "groupName": "Dev dependencies",
      "depTypeList": ["devDependencies"]
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "groupName": "ESLint",
      "packagePatterns": ["^eslint", "^@typescript-eslint"]
    }
  ]
}
