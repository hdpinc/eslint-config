{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on wednesday"]
  },
  "automerge": true,
  "packageRules": [
    {
      "groupName": "Dev dependencies",
      "depTypeList": ["devDependencies"]
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "groupName": "ESLint",
      "packagePatterns": ["^eslint/", "^@typescript-eslint/"]
    }
  ]
}
