{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on wednesday"]
  },
  "automerge": true,
  "packageRules": [
    {
      "groupName": "Dev dependencies",
      "depTypeList": ["devDependencies"],
      "excludePackageNames": ["eslint"],
      "excludePackagePatterns": ["^eslint/", "^@typescript-eslint/"]
    },
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    },
    {
      "groupName": "ESLint",
      "packageNames": ["eslint"],
      "packagePatterns": ["^eslint/", "^@typescript-eslint/"]
    }
  ]
}
